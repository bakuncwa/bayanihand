@model ForumVM

<span style="color: #5188F5">
    <h3>
        <b>
            <i class="fa fa-home"></i>
            Post a Handy Job
        </b>
    </h3>
</span>
 <hr/>

<span style="color: black">
<form asp-controller="Customer" asp-action="AddForum" method="post">
    <div asp-validation-summary ="All" class="text text-danger"></div> 

    <label asp-for="ForumPostID"></label>
    <input asp-for="ForumPostID" class="form-control" />
    <br />
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control" />
    <br/>
    <label asp-for="Description"></label>
    <textarea asp-for="Description" row="4" cols="50">
    </textarea>
    <br />
    <label asp-for="Status"></label>
    <input asp-for="Status" class="form-control" />
    <br />

    <a asp-controller="Customer" asp-action="Forum" class="btn btn-secondary">
        Cancel
    </a>
    <button type="submit" class="btn btn-primary">
        Post
    </button>
</form>
