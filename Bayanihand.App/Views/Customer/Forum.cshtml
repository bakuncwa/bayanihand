@model List<ForumVM>

<span style="color: #5188F5">
    <h3>
        <b>
            <i class="fas fa-table"></i>
            Job Listing Forum
        </b>
    </h3>
</span>
<hr />

<div class="container">
    <div class="row mb-3 align-items-center">
        <div class="col">
            <a asp-controller="Landing" asp-action="Index" class="btn btn-secondary">
                Go back
            </a>
        </div>
        <div class="col text-center">
            <div class="alert alert-info mb-0">
                @Model.Count result(s) found
            </div>
        </div>
        <div class="col text-end">
            <a asp-controller="Customer" asp-action="AddForum" class="btn btn-success">
                Post a Handy Job
            </a>
        </div>
    </div>
</div>

<table id="tblForum" class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Job</th>
            <th>Date Posted</th>
            <th>Date Edited</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ForumVM item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>Job Type</td>
                <td>@item.DatePosted</td>
                <td>@item.DateEdited</td>
                <td>@item.Status</td>
                <td>
                    <a asp-controller="Customer" asp-action="Applicants" class="btn btn-outline-custom btn-sm">
                        Applicants
                    </a>
                    <a asp-controller="Customer" asp-action="EditForum" asp-route-id="@item.ForumPostID" class="btn btn-outline-info btn-sm">
                        Edit Post
                    </a>
                    <button type="submit" class="btn btn-outline-danger btn-sm btnDeleteForum" data-id="@item.ForumPostID">
                        Delete Post
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<form id="DeleteForum" asp-controller="Customer" asp-action="DeleteForum" method="post">
    <input type="hidden" id="ForumPostID" name="Id" value="" />
</form>

@section Scripts{
    <script>
        // let table = new DataTable('#tblForum');

        $('.btnDeleteForum').click(function (e) {

            var btn = $(this);
            var id = btn.data('id')

            Swal.fire({
                title: "Are you sure?",
                text: "Deleting a post cannot be undone",
                icon: "warning",
                showCancelButton: true
            }).then((confirm) => {
                if (confirm.isConfirmed) {
                    $('#ForumPostID').val(id);
                    $('#DeleteForum').submit();
                }
            });
        });
    </script>
}

<style>
    .btn-outline-custom {
        border: 1px solid #FF911F; /* Border color */
        color: #FF911F; /* Text color */
        background-color: transparent; /* Background color */
    }

     .btn-outline-custom:hover {
        background-color: #FF911F;
        color: white;
        }

</style>