@model List<ApplicationINV>

<h3>Handyman Applicants</h3>
<hr />

<a asp-controller="Customer" asp-action="Forum" class="btn btn-secondary">
    Back to Job Forum
</a>
<br />
<br />

<div class="alert alert-info">
    @Model.Count result(s) found
</div>
<br />

<table id="ApplicantsTable" class="table table-striped table-hover table-bordered table-sm">
    <thead>
        <tr>
            <th>Application I.D.</th>
            <th>Date Applied</th>
            <th>Title</th>
            <th>Handyman</th>
            <th>CV</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ApplicationINV item in Model)
        {
            <tr>
                <td>@item.ApplicationID</td>
                <td>@item.DateApplied</td>
                <td>(ID:@item.HandymanID) @item.Handyman</td>
                <td>
                    <a asp-controller="Customer" asp-action="Schedule"
                       asp-route-Id="@item.HandymanID"
                       class="btn btn-outline-success btn-sm">
                        <i class="fas fa-edit"></i>
                        Book
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

