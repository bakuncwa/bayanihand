@model List<ApplicationINV>

<span style="color: #FF911F">
    <h3>
        <b>
            <i class="fas fa-tools"></i>
            Handyman Applicants
        </b>
    </h3>
</span>
<hr />

<div class="container">
    <div class="row mb-3 align-items-center">
        <div class="col">
            <a asp-controller="Customer" asp-action="Forum" class="btn btn-secondary">
                Back to Job Forum
            </a>
        </div>
        <div class="col text-end">
            <div class="alert alert-info mb-0 w-100 text-center">
                @Model.Count result(s) found
            </div>
        </div>
    </div>
</div>

<table id="ApplicantsTable" class="table table-striped table-hover table-bordered table-sm">
    <thead>
        <tr>
            <th>Application I.D.</th>
            <th>Date Applied</th>
            <th>Has Applied</th>
            <th>Handyman</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ApplicationINV item in Model)
        {
            <tr>
                <td>@item.ApplicationID</td>
                <td>@item.DateApplied</td>
                <td>@item.hasApplied</td>
                <td>(ID:@item.HandymanID) @item.Handyman</td>
                <td>
                    <a asp-controller="Customer" asp-action="JobSchedule"
                       asp-route-Id="@item.HandymanID"
                       class="btn btn-outline-custom btn-sm">
                        <i class="fas fa-edit"></i>
                        Book
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-outline-custom {
        border: 1px solid #FF911F; /* Border color */
        color: #FF911F; /* Text color */
        background-color: transparent; /* Background color */
    }

    .btn-outline-custom:hover {
        background-color: #FF911F;
        color: white;
    }
</style>